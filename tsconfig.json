{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src/",
    "paths": {
      "/*": [ "src/*" ],
      "@/app/*": [ "./src/app/*" ],
      "@pages/*": [ "./src/pages/*" ],
      "@shared/*": [ "./src/shared/*" ],
      "@widgets/*": [ "./src/widgets/*" ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./config/jest/setupTests.ts",
  ]
}
